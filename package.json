{
  "name": "kangopak",
  "version": "1.0.0",
  "description": "react app with passport auth",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"npm run client\" \"npm run server\"",
    "server": "nodemon server.js",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js && scripts/seed2DB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "proxy": {
    "/graphql": {
      "target": "https://localhost:3001",
      "secure": false  }
    },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evanejtucker/react-auth.git"
  },
  "keywords": [],
  "author": "Evan E J Tucker",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/evanejtucker/react-auth/issues"
  },
  "homepage": "https://github.com/evanejtucker/react-auth#readme",
  "dependencies": {
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "bootstrap": "^4.3.1",
    "colors": "^1.3.3",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-session": "^1.16.2",
    "formik": "^1.5.8",
    "graphql": "^14.5.6",
    "if-env": "^1.0.4",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.8",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "react-bootstrap": "^1.0.0-beta.12"
  },
  "devDependencies": {
    "colors": "^1.3.3",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.9"
  }, 
  "proxy": {
    "/graphql": {
      "target": "https://localhost:3001",
      "secure": false
    }
  }

}
